<div class="row">
  <div class="col-md-12">
    <%- if controller_name != 'sessions' %>
      <%#= link_to "Sign in", new_session_path(resource_name), class: "btn btn-default btn-lg" %>
      <%= link_to "Sign in", root_path, class: "btn btn-default btn-lg" %>
    <% end -%>

    <%- if devise_mapping.registerable? && controller_name != 'registrations' && can_register_new_account %>
	    <%= link_to "Create account", new_registration_path(resource_name, :invitation_id => params[:invitation_id]), class: "btn btn-default btn-lg sm_full_width" %>
    <% end -%>

    <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
      <%= link_to "Forgot your password?", new_password_path(resource_name), class: "btn btn-default btn-lg sm_full_width" %>
    <% end -%>

    <%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
      <%= link_to "Didn't receive confirmation instructions?", new_confirmation_path(resource_name) %>
    <% end -%>

    <%- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
      <%= link_to "Didn't receive unlock instructions?", new_unlock_path(resource_name) %>
    <% end -%>

    <%- if devise_mapping.omniauthable? %>
      <%- resource_class.omniauth_providers.each do |provider| %>
        <%= link_to "Sign in with #{provider.to_s.titleize}", omniauth_authorize_path(resource_name, provider) %>
      <% end -%>
    <% end -%>
  </div>
</div>
