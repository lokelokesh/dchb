<div class="container top-pd">
  <div class="col-md-6 col-md-offset-3 col-sm-8 col-xs-12">
    <h1>Change your password</h1>

      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
      <%= devise_error_messages! %>
      <%= f.hidden_field :reset_password_token %>

      <div class="form-group">
        <%= f.label :password, "New Password" %><br />
        <%= f.password_field :password, autofocus: true, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.label :password_confirmation, "Confirm New Password" %><br />
        <%= f.password_field :password_confirmation, autofocus: true, class: "form-control" %>
      </div>

      <div class="form-group form-group-actions">
       <%= f.submit "Change my password", class: "btn btn-primary sm_full_width" %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>
