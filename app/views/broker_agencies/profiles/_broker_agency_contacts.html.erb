<h3>Broker Agency Contacts</h3>

<div class="table-border">
  <table class="table">
    <% if broker_agency_contacts.present? %>
        <thead>
          <th>First Name</th>
          <th>Last Name</th>
          <th>Dob</th>
          <th>Primary Broker Role Info (npn / provider kind / active)</th>
        </thead>
        <% broker_agency_contacts.each do |broker_agency_contact| %>
          <tbody>
            <td><%= broker_agency_contact.first_name %></td>
            <td><%= broker_agency_contact.last_name %></td>
            <td><%= broker_agency_contact.dob %></td>
            <td><%= broker_agency_contact.broker_role.present? ? "#{broker_agency_contact.broker_role.npn} / #{broker_agency_contact.broker_role.provider_kind}" : "" %></td>
          </tbody>
        <% end %>
    <% else %>
      <tr><td>No Broker Agency Contacts found.</td></tr>
    <% end %>
  </table>
</div>